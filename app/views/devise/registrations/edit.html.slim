.container style=("padding-top: 60px;")
  h1.page-header Edit Profile
  .row
    .col-md-4.col-sm-6.col-xs-12
      .text-center
        img.avatar.img-circle.img-thumbnail alt="avatar" src="http://lorempixel.com/200/200/people/9/" /
        h6 Upload photo
        input.text-center.center-block.well.well-sm type="file" /

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f|
      = devise_error_messages!
      .col-md-8.col-sm-6.col-xs-12.personal-info
        .alert.alert-info.alert-dismissable
          /i.fa.fa-coffee
            /a.panel-close.close data-dismiss="alert"  Ã—

        form.form-horizontal role="form"
          .form-group
            label.col-lg-3.control-label Name:
            .col-lg-8
              input.form-control type="text" value=""

          .form-group
            label.col-lg-3.control-label Email:
            .col-lg-8
              input.form-control type="text" value="janesemail@gmail.com"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              div Currently waiting confirmation for:
                = resource.unconfirmed_email

          .form-group
            label.col-md-3.control-label Password:
            .col-md-8
              input.form-control type="password" placeholder="leave blank if you don't want to change it" value=""

          .form-group
            label.col-md-3.control-label Confirm password:
            .col-md-8
              input.form-control type="password" value=""

          .form-group
            label.col-md-3.control-label Current password:
            .col-md-8
              input.form-control type="password" placeholder="we need your current password to confirm your changes"

          .form-group
            label.col-md-3.control-label
            .col-md-8
              input.btn.btn-primary type="submit" value="Save Changes"
              span
              input.btn.btn-default type="reset" value="Cancel"
